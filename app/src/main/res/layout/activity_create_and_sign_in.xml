<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.CreateAndSignInActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewPager"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="false" />

                        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                            android:id="@+id/dots_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_alignBottom="@+id/viewPager"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="20dp"
                            android:elevation="8dp"
                            app:dotsColor="@color/bluebg"
                            app:dotsCornerRadius="8dp"
                            app:dotsSize="16dp"
                            app:dotsSpacing="4dp"
                            app:dotsWidthFactor="2"
                            app:progressMode="true"
                            app:selectedDotColor="@color/btncolordark" />

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llEditGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/et1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/etsizesm"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/edittext"
                            android:drawableLeft="@drawable/mobile"
                            android:drawablePadding="6dp"
                            android:gravity="center_vertical"
                            android:hint="Enter Mobile Number"
                            android:inputType="none"
                            android:paddingStart="@dimen/paddingstart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/inputsizesm" />


                        <TextView
                            android:id="@+id/et2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/etsizesm"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/edittext"
                            android:drawableLeft="@drawable/name"
                            android:drawablePadding="6dp"
                            android:gravity="center_vertical"
                            android:hint="Your Name"
                            android:inputType="none"
                            android:paddingStart="@dimen/paddingstart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/inputsizesm" />

                        <TextView
                            android:id="@+id/et3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/etsizesm"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/edittext"
                            android:drawableLeft="@drawable/email"
                            android:drawablePadding="6dp"
                            android:gravity="center_vertical"
                            android:hint="Your Personal Email"
                            android:inputType="none"
                            android:paddingStart="@dimen/paddingstart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/inputsizesm" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvCorporate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:text="I have a Corporate Account"
                        android:textColor="@color/bluenew"
                        android:textSize="@dimen/inputsizesm">

                    </TextView>

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textSize="@dimen/inputsizesm">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="By signing in you agree to our"
                        android:textColor="@color/black"
                        android:textSize="@dimen/inputsizesm">

                    </TextView>

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textSize="@dimen/inputsizesm">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>